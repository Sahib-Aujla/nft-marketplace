pragma solidity ^0.8.19;

import {Test, console} from "forge-std/Test.sol";
import {DeployMoodNft} from "../script/DeployMoodNft.s.sol";
import {MoonNft} from "../src/MoonNft.sol";

contract TestMoonNft is Test {
    MoonNft moonNft;
    DeployMoodNft deployer;
    string constant HAPPY_MOOD_URI =
        "data:image/svg+xml;base64,";
    string constant SAD_MOOD_URI =
        "data:image/svg+xml;base64,";

    address USER = makeAddr("user");

    function setUp() public {
        deployer = new DeployMoodNft();
        moonNft = deployer.run();
    }

    function testCheckNameAndSymbol() external view {
        assert(keccak256(bytes(moonNft.name())) == keccak256(bytes("Moon")));
        assert(keccak256(bytes(moonNft.symbol())) == keccak256(bytes("MOON")));
    }

    function testMintNftAndCheckTokenUri() external {
        vm.prank(USER);
        uint256 tokenId = moonNft.mintNft();
        console.log("TokenId:", tokenId);
        assert(moonNft.balanceOf(USER) == 1);
    }

    function testFlipMood() external {
        vm.startPrank(USER);
        uint256 tokenId = moonNft.mintNft();
        assert(moonNft.s_tokenIdToState(tokenId) == MoonNft.NFTState.HAPPY);

        moonNft.flipMood(tokenId);
        assert(moonNft.s_tokenIdToState(tokenId) == MoonNft.NFTState.SAD);
        moonNft.flipMood(tokenId);
        assert(moonNft.s_tokenIdToState(tokenId) == MoonNft.NFTState.HAPPY);
        vm.stopPrank();
    }

    function testGetHappySVG() external view {
        console.log(
            keccak256(bytes(moonNft.getHappySVG())) ==
                keccak256(bytes(HAPPY_MOOD_URI))
        );
        assert(
            keccak256(bytes(moonNft.getHappySVG())) ==
                keccak256(bytes(HAPPY_MOOD_URI))
        );
    }

    function testGetSadSVG() external view {
        assert(
            keccak256(bytes(moonNft.getSadSVG())) ==
                keccak256(bytes(SAD_MOOD_URI))
        );
    }
}
